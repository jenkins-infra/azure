name: "Bump Terraform `kubernetes` provider version"

scms:
  default:
    kind: github
    spec:
      user: "{{ .github.user }}"
      email: "{{ .github.email }}"
      owner: "{{ .github.owner }}"
      repository: "{{ .github.repository }}"
      token: "{{ requiredEnv .github.token }}"
      username: "{{ .github.username }}"
      branch: "{{ .github.branch }}"

sources:
  lastVersion:
    name: Get latest version of the `kubernetes` provider
    kind: terraform/registry
    spec:
      type: provider
      namespace: hashicorp
      name: kubernetes

targets:
  updateTerraformLockFile:
    name: Update Terraform lock file
    kind: terraform/lock
    sourceid: lastVersion
    spec:
      file: .terraform.lock.hcl
      provider: hashicorp/kubernetes
      platforms:
        - linux_amd64
        - linux_arm64
        - darwin_amd64
        - darwin_arm64
    scmid: default

actions:
  default:
    kind: github/pullrequest
    scmid: default
    spec:
      title: Bump Terraform `kubernetes` provider version to {{ source "lastVersion" }}
      labels:
        - terraform-providers
        - hashicorp/kubernetes
